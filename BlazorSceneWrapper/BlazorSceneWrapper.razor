@using Atelier.Interfaces
@using Atelier.Interfaces.Events
@using SkiaSharp.Views.Blazor

<SKCanvasView OnPaintSurface="args => _scene.Render(args.Surface.Canvas)"
              EnableRenderLoop="true"
              @onclick="args => _scene.Click(new ClickEventArgs((MouseButton)args.Buttons, args.OffsetX, args.OffsetY, args.MovementX, args.MovementY))"></SKCanvasView>

@code {
    [Parameter] public Scene _scene { get; set; }

    
}